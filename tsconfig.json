{
  /* See https://www.typescriptlang.org/docs/handbook/compiler-options.html */
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "plugins": [{ "transform": "@compiled/ts-transform-css-in-js" }],
    "baseUrl": "packages",
    "paths": {
      "@compiled/css-in-js": ["css-in-js/src/index.tsx"],
      "@compiled/jest-css-in-js": ["jest/src/index.tsx"],
      "@compiled/ts-transform-css-in-js": ["ts-transform/src/index.tsx"]
    }
  },
  "include": ["packages/*", "packages/**/*", "types"],
  "exclude": ["node_modules", "examples", "dist"]
}
