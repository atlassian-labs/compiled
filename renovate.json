{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "group:monorepos",
    "group:recommended",
    "group:definitelyTyped",
    "schedule:earlyMondays"
  ],
  "dependencyDashboard": true,
  "postUpdateOptions": ["yarnDedupeHighest"],
  "rangeStrategy": "bump",
  "semanticCommits": "enabled",
  "branchConcurrentLimit": 6,
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "depTypeList": ["devDependencies"],
      "updateTypes": ["patch", "minor"],

      "groupName": "devDependencies (non-major)",
      "postUpgradeTasks": {
        "commands": ["yarn changeset --empty"],
        "fileFilters": [".changeset/*", "yarn.lock"]
      }
    },
    {
      "depTypeList": ["devDependencies"],
      "postUpgradeTasks": {
        "commands": ["yarn changeset --empty"],
        "fileFilters": [".changeset/*", "yarn.lock"]
      }
    },
    {
      "depTypeList": ["dependencies"],
      "prPriority": 1,
      "postUpgradeTasks": {
        "commands": ["ts-node scripts/generate-renovate-changeset.ts"],
        "fileFilters": [".changeset/*", "yarn.lock"]
      }
    },
    {
      "packagePatterns": ["^@types"],
      "prPriority": -1
    },
    {
      "managers": ["npm"],
      "updateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "managers": ["nvm"],
      "automerge": true
    },
    {
      "updateTypes": ["lockFileMaintenance"],
      "automerge": true
    },
    {
      "extends": ["group:postcss", "schedule:weekly"],
      "packagePatterns": ["^postcss-", "^autoprefixer", "^cssnano"],
      "groupName": "postcss packages"
    },
    {
      "packagePatterns": ["webpack", "-loader", "webpack-plugin"],
      "groupName": "webpack packages"
    },
    {
      "packagePatterns": ["^parcel", "^@parcel"],
      "groupName": "parcel packages"
    },
    {
      "depTypeList": ["peerDependencies"],
      "rangeStrategy": "widen"
    },
    {
      "extends": ["packages:eslint", "schedule:monthly"],
      "groupName": "eslint packages"
    }
  ]
}
