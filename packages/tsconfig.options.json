{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["dom", "es2016", "es2017.object"],
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "paths": {
      "@compiled/react": ["../packages/react/src/index.tsx"],
      "@compiled/react/runtime": ["../packages/react/src/runtime.tsx"],
      "@compiled/jest": ["../packages/jest/src/index.tsx"]
    },
    "typeRoots": ["../node_modules/@types", "../types"]
  },
  "includes": ["../packages", "../examples"]
}
